# [VARIABLES] #
set $mod Mod4

# resize step
set $rsize 5 px or 5 ppt


# font for window titles. ISO 10646 = Unicode
#set $fn -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
#set $fn -*-proggytiny-*-*-*-*-*-*-*-*-*-*-*-*
#set $fn -*-profont-*-*-*-*-11-*-*-*-*-*-*-*
#set $fn -*-terminus-*-*-*-*-*-*-*-*-*-*-*-*
#set $fn -*-monofur-*-*-*-*-*-*-*-*-*-*-*-*
set $fn -*-monaco-*-*-*-*-9-*-*-*-*-*-*-*

# wallpaper
set $wallpaper_path /home/jure/.config/wallpaper2.jpg

# workspace shortcuts
set $ws1 1: main 
set $ws2 2: www 
set $ws3 3: dev 
set $ws4 4: dev 
set $ws5 5: media 
set $ws6 6: vm 
set $ws7 7: junk 
set $ws8 8: phil 
set $ws9 9: chat 
set $ws10 #! sys 

# bar stats
set $status_command bar-stats

# default colors
set $fg_focus ffffff
set $bg_focus 285577
set $br_focus 4c7899

set $fg_focus_inactive ffffff
set $bg_focus_inactive 5f676a
set $br_focus_inactive 333333

set $fg_unfocus 888888
set $bg_unfocus 222222
set $br_unfocus 333333

set $fg_urgent ffffff
set $bg_urgent 900000
set $br_urgent 2f343a

# custom colors
#set $fg_focus ffffff
#set $bg_focus 557728
#set $br_focus 78994c

#set $fg_focus_inactive ffffff
#set $bg_focus_inactive 676a5f
#set $br_focus_inactive 333333

#set $fg_unfocus 888888
#set $bg_unfocus 222222
#set $br_unfocus 333333

#set $fg_urgent ffffff
#set $bg_urgent 900000
#set $br_urgent 343a2f

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec roxterm

# kill focused window
bindsym $mod+Shift+Q kill
bindsym $mod+Escape kill
bindsym $mod+Delete kill

# font
font $fn

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -nb '#$bg_unfocus' -nf '#$fg_unfocus' -sb '#$br_focus' -sf '#$fg_focus' -p '$' #-fn '$fn'

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+ccaron focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+J move left
bindsym $mod+Shift+K move down
bindsym $mod+Shift+L move up
bindsym $mod+Shift+Ccaron move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# switch to previous workspace with same workspace shortcut
workspace_auto_back_and_forth yes

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+exclam move workspace $ws1
bindsym $mod+Shift+quotedbl move workspace $ws2
bindsym $mod+Shift+numbersign move workspace $ws3
bindsym $mod+Shift+dollar move workspace $ws4
bindsym $mod+Shift+percent move workspace $ws5
bindsym $mod+Shift+ampersand move workspace $ws6
bindsym $mod+Shift+slash move workspace $ws7
bindsym $mod+Shift+parenleft move workspace $ws8
bindsym $mod+Shift+parenright move workspace $ws9
bindsym $mod+Shift+equal move workspace $ws10

# move focused container to workspace and focus the workspace
bindsym $mod+Control+exclam move workspace $ws1; workspace $ws1
bindsym $mod+Control+quotedbl move workspace $ws2; workspace $ws2
bindsym $mod+Control+numbersign move workspace $ws3; workspace $ws3
bindsym $mod+Control+dollar move workspace $ws4; workspace $ws4
bindsym $mod+Control+percent move workspace $ws5; workspace $ws5
bindsym $mod+Control+ampersand move workspace $ws6; workspace $ws6
bindsym $mod+Control+slash move workspace $ws7; workspace $ws7
bindsym $mod+Control+parenleft move workspace $ws8; workspace $ws8
bindsym $mod+Control+parenright move workspace $ws9; workspace $ws9
bindsym $mod+Control+equal move workspace $ws10; workspace $ws10

# switch between the current and the previously focused one
bindsym $mod+b workspace back_and_forth

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        
        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left
        
        bindsym j resize grow left $rsize
        bindsym Shift+J resize shrink left $rsize
        
        bindsym k resize grow down $rsize
        bindsym Shift+K resize shrink down $rsize
        
        bindsym l resize grow up $rsize
        bindsym Shift+L resize shrink up $rsize
        
        bindsym ccaron resize grow right $rsize
        bindsym Shift+Ccaron resize shrink right $rsize
        
        # same bindings, but for the arrow keys
        bindsym Left resize grow left $rsize
        bindsym Shift+Left resize shrink left $rsize
        
        bindsym Down resize grow down $rsize
        bindsym Shift+Down resize shrink down $rsize
        
        bindsym Up resize grow up $rsize
        bindsym Shift+Up resize shrink up $rsize
        
        bindsym Right resize grow right $rsize
        bindsym Shift+Right resize shrink right $rsize
        
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# focus does NOT follow mouse
focus_follows_mouse no

# colors
client.focused                  #$br_focus              #$bg_focus              #$fg_focus
client.focused_inactive         #$br_focus_inactive     #$bg_focus_inactive     #$fg_focus_inactive
client.unfocused                #$br_unfocus            #$bg_unfocus            #$fg_unfocus
client.urgent                   #$br_urgent             #$bg_urgent             #$fg_urgent

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    mode dock
    position bottom
    colors {
        focused_workspace       #$fg_focus              #$bg_focus
        urgent_workspace        #$fg_urgent             #$bg_urgent
    }
}

### X server stuff BEGIN ###
#
# key bindings
exec_always xbindkeys
#
# keypress rate delay
exec_always xset r rate 240 25
#
# screen lock (5 min)
exec_always xautolock -time 5 -locker slock-screen-off
#
# screen turn off (5 min) (as fallback to the above command)
exec_always xset dpms 0 300 300
#
#
### X server stuff END ###

# wallpaper
exec_always feh --bg-scale $wallpaper_path

# application shortcuts
bindsym $mod+Mod1+w exec firefox
bindsym $mod+Mod1+f exec thunar
bindsym $mod+Mod1+b exec evince
bindsym $mod+Mod1+c exec pidgin
bindsym $mod+Mod1+d exec eclipse
bindsym $mod+Mod1+t exec roxterm -T "rtorrent" -e rtorrent
#bindsym $mod+Mod1+g [class="^Gimp" title="^Toolbox"] focus; floating toggle; resize shrink left 10 px or 10 ppt
#bindsym $mod+Mod1+l [title="^Dia "] focus; resize shrink right 50 px or 50 ppt

# system monitor
#bindsym $mod+Mod1+s exec "roxterm -T 'top' -e top"

# applications mappings
assign [class="Firefox"] $ws2
#assign [class="Eclipse"] $ws3
assign [class="Pidgin"] $ws9
assign [class="VirtualBox"] $ws6
assign [class="TuxGuitar"] $ws5
assign [class="Audacious"] $ws5
