#!/bin/bash
# Author: Jure Ziberna

shm='/dev/shm'
home='/home/jure'
owner='jure:users'

function to_ram() {
    if [ -d "$1" ]; then
        rm -r "$1"
    fi
    if [ ! -d "$2" ]; then
        mkdir -p "$2"
    fi
    ln -s "$2" "$1"
    chown $owner "$1"
}

to_ram "${home}/.adobe" "${shm}/flash-cache/adobe"
to_ram "${home}/.macromedia" "${shm}/flash-cache/macromedia"
to_ram "${home}/.thumbnails" "${shm}/thumbnails"
