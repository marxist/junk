#!/bin/bash
file=${1:-conf}
tool=${2:-vim}

if [ "${file}" == "conf" ]; then
    file="${HOME}/bin/conf"
elif [ "${file}" == "bash" ]; then
    file="${HOME}/.bashrc"
elif [ "${file}" == "BASH" ]; then
    file="/etc/bash.bashrc"
elif [ "${file}" == "i3" ]; then
    file="${HOME}/.i3/config"
elif [ "${file}" == "httpd" ]; then
    file="/etc/httpd/conf/httpd.conf"
elif [ "${file}" == "php" ]; then
    file="/etc/php/php.ini"
elif [ "${file}" == "backup" ]; then
    file="${HOME}/bin/backup2junk"
elif [ "${file}" == "fan" ]; then
    file="/etc/fancontrol"
elif [ "${file}" == "rc" ]; then
    file="/etc/rc.conf"
elif [ "${file}" == "xinit" ]; then
    file="${HOME}/.xinitrc"
fi

echo "Full command: ${tool} ${file}" & ${tool} ${file}
